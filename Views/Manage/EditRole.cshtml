@using SuszkowBlog.Views.Manage
@model ManageRoleModel
@{
    ViewData["Title"] = "Edit role";
}
<h1 class="font-weight-light">@ViewData["Title"]</h1>
<form method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="Id" class="col-sm-2 col-form-label font-weight-light"></label>
        <div class="col-sm-10">
            <input asp-for="Id" disabled class="form-control">
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="RoleName" class="col-sm-2 col-form-label font-weight-light"></label>
        <div class="col-sm-10">
            <input asp-for="RoleName" class="form-control">
            <span asp-validation-for="RoleName" class="text-primary"></span>
        </div>
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Update</button>
            <a asp-action="ManageRole" class="btn btn-cancel">Cancel</a>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h3 class="font-weight-light">Users in this role</h3>
        </div>
        <div class="card-body">
            @if (Model.Users.Any())
            {
                foreach (var user in Model.Users)
                {
                    <h5 class="card-title font-weight-light">@user</h5>
                }
            }
            else
            {
                <h5 class="card-title font-weight-light">None</h5>
            }
        </div>
        <div class="card-footer">
            <a asp-controller="Manage" asp-action="EditUsersInRole" 
               asp-route-roleId="@Model.Id" class="btn btn-primary" style="width:auto">
            Edit users in this role</a>
        </div>
    </div>
</form>