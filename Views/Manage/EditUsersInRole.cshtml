
@model List<SuszkowBlog.Views.Manage.UsersInRoleModel>

@{
    ViewData["Title"] = "Edit users in role";
}

<form method="post" asp-controller="Manage" asp-action="EditUsersInRole" asp-route-roleId="@ViewBag.roleId">
    <table class="table table-hover" style="width:100%">
            @{ for (int i = 0; i < Model.Count; i++)
                {

                <input type="hidden" asp-for="@Model[i].Id" />
                <input type="hidden" asp-for="@Model[i].Name" />
                <th>
                    <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                </th>
                <th>
                    <label class="form-check-label" asp-for="@Model[i].IsSelected">
                        @Model[i].Name
                    </label>
                </th>

                    } 
                }
                <div class="card-footer">
                    <input type="submit" value="Update" class="btn btn-primary"
                           style="width:auto" />
                    <a asp-action="EditRole" asp-route-roleId="@ViewBag.roleId"
                       class="btn btn-primary" style="width:auto">Cancel</a>
                </div>
                </div>
</form>