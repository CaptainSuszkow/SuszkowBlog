@model Post
@{
    ViewData["Title"] = "Edit post";
}
<h1 class="font-weight-light">@ViewData["Title"]</h1>
<div>
    <form asp-action="EditPost" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="@Model.Title"></label>
            <input asp-for="@Model.Title" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="@Model.Content"></label>
            <textarea asp-for="@Model.Content" rows="10" cols="20" class="form-control"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
        <a asp-action="ManagePost" class="btn btn-cancel">Cancel</a>
    </form>
    @if (Model.Comments != null)
    {
    <table>
        <tbody>
            @foreach (var comment in Model.Comments)
            {
            <tr>
                <th>@comment.Content</th>
                <th>@comment.UserID</th>
                <th>
                    <form asp-controller="Manage" asp-action="RemoveComment"
                          asp-route-id="@comment.ID" asp-route-postId="@Model.ID" method="post">
                        <button type="submit" class="btn btn-danger"
                                onclick="return confirm('Are you sure you want to delete this comment?')">
                            Delete
                        </button>
                    </form>
                </th>
            </tr>
            }
        </tbody>
    </table>
    }
</div>