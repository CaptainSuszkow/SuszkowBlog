@model Post
@{
    ViewData["Title"] = "Add a new post";
}
<h1 class="font-weight-light">@ViewData["Title"]</h1>
<div>
    <form asp-action="AddPost" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="@Model.Title"></label>
            <input asp-for="@Model.Title" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="@Model.Content"></label>
            <textarea asp-for="@Model.Content" rows="10" cols="20" class="form-control"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
        <a asp-action="ManagePost" class="btn btn-cancel">Cancel</a>
    </form>
</div>